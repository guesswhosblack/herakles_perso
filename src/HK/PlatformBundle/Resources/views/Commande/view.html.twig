{# src/OC/PlatformBundle/Resources/view/Commande/view.html.twig #}

{% extends "HKPlatformBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block hkplatform_body %}

  <h2>{{ commande.title }}</h2>
  <i>Par {{ commande.author }}, le {{ commande.date|date('d/m/Y') }}</i>

  <div class="well">
    {{ commande.content }}
  </div>

  <p>
    <a href="{{ path('hk_platform_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour Ã  la liste
    </a>
    <a href="{{ path('hk_platform_edit', {'id': commande.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'annonce
    </a>
    <a href="{{ path('hk_platform_delete', {'id': commande.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'annonce
    </a>
  </p>

{% endblock %}
