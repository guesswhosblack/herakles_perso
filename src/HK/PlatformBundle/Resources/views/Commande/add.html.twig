{# src/HK/PlatformBundle/Resources/views/Commande/add.html.twig #}

{% extends "HKPlatformBundle::layout.html.twig" %}

{% block title %}
  Ajouter une annonce - {{ parent() }}
{% endblock %}

{% block hkplatform_body %}

  <h2>Ajouter une commande</h2>

  {{ include("HKPlatformBundle:Commande:form.html.twig") }}

  <p>
    Vous éditez une annonce déjà existante, merci de ne pas changer
    l'esprit générale de l'annonce déjà publiée.
  </p>

  <p>
    <a href="{{ path('hk_platform_view', {'id': commande.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'annonce
    </a>
  </p>

{% endblock %}
